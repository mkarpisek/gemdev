<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.compare.ui.category.compare"
            id="net.karpisek.gemdev.compare.withLocalHistoryCommand"
            name="%compareWithLocalHistoryCommand.name">
      </command>
      <command
            id="net.karpisek.gemdev.compare.withOtherClassCommand"
            name="%compareWithOtherClassCommand.name">
      </command>
      <command
            id="net.karpisek.gemdev.compare.withOtherSessionCommand"
            name="%compareWithOtherSessionCommand.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:net.karpisek.gemdev.methodsView?after=group.compare">
         <menu
               label="%compareWithMenu.label">
            <command
                  commandId="net.karpisek.gemdev.compare.withLocalHistoryCommand"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="popup:net.karpisek.gemdev.classHierarchyView?after=group.compare">
         <menu
               id="net.karpisek.gemdev.classHierarchyView.compareWithMenu"
               label="%compareWithMenu.label">
            <command
                  commandId="net.karpisek.gemdev.compare.withOtherSessionCommand"
                  style="push">
            </command>
            <command
                  commandId="net.karpisek.gemdev.compare.withOtherClassCommand"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="net.karpisek.gemdev.compare.ui.CompareWithLocalHistoryHandler"
            commandId="net.karpisek.gemdev.compare.withLocalHistoryCommand">
         <activeWhen>
            <with
                  variable="activePartId">
               <equals
                     value="net.karpisek.gemdev.methodsView">
               </equals>
            </with>
         </activeWhen>
         <enabledWhen>
            <with
                  variable="selection">
               <count
                     value="1">
               </count>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="net.karpisek.gemdev.compare.ui.CompareWithOtherSessionHandler"
            commandId="net.karpisek.gemdev.compare.withOtherSessionCommand">
         <activeWhen>
            <with
                  variable="activePartId">
               <equals
                     value="net.karpisek.gemdev.classHierarchyView">
               </equals>
            </with>
         </activeWhen>
         <enabledWhen>
            <with
                  variable="selection">
               <count
                     value="1">
               </count>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="net.karpisek.gemdev.compare.ui.CompareWithOtherClassHandler"
            commandId="net.karpisek.gemdev.compare.withOtherClassCommand">
         <activeWhen>
            <with
                  variable="activePartId">
               <equals
                     value="net.karpisek.gemdev.classHierarchyView">
               </equals>
            </with>
         </activeWhen>
         <enabledWhen>
            <with
                  variable="selection">
               <count
                     value="1">
               </count>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="net.karpisek.gemdev.compare.ui.CompareEditor"
            default="false"
            icon="resources/icons/compare.gif"
            id="net.karpisek.gemdev.compare.CompareEditor"
            name="%compareEditor.name">
      </editor>
   </extension>

</plugin>
